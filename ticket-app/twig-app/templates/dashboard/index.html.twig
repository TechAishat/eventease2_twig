{% extends 'base.html.twig' %}

{% block title %}Dashboard - TicketMaster{% endblock %}

{% block styles %}
<style>
    .stat-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    .ticket-status {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    .status-open {
        background-color: #dcfce7;
        color: #166534;
    }
    
    .status-in-progress {
        background-color: #fef3c7;
        color: #92400e;
    }
    
    .status-closed {
        background-color: #f3f4f6;
        color: #374151;
    }
</style>
{% endblock %}

{% block content %}
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
            <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
            <span id="last-updated" class="text-sm text-gray-500">Loading...</span>
        </div>
        
        <!-- Loading Skeleton -->
        <div id="loading-skeleton" class="mt-8 space-y-4">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
                {% for i in 1..4 %}
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="p-5">
                        <div class="animate-pulse">
                            <div class="h-4 bg-gray-200 rounded w-1/3 mb-4"></div>
                            <div class="h-8 bg-gray-200 rounded w-1/2"></div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        
        <!-- Stats Grid -->
        <div id="stats-container" class="hidden">
            <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
                <!-- Total Tickets -->
                <div class="stat-card bg-white overflow-hidden shadow rounded-lg hover:shadow-lg">
                    <div class="p-5">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
                                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                </svg>
                            </div>
                            <div class="ml-5 w-0 flex-1">
                                <dl>
                                    <dt class="text-sm font-medium text-gray-500 truncate">Total Tickets</dt>
                                    <dd class="flex items-baseline">
                                        <div class="text-2xl font-semibold text-gray-900" id="total-tickets">0</div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-5 py-3">
                        <div class="text-sm">
                            <a href="/ticket-app/twig-app/public/tickets" class="font-medium text-indigo-600 hover:text-indigo-500">View all</a>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900">Open Tickets</h3>
                        <p class="mt-1 text-sm text-gray-500">View all open tickets</p>
                    </div>
                </a>
                
                <a href="/ticket-app/twig-app/public/tickets?assigned=me" class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 hover:border-blue-500 transition duration-150 ease-in-out">
                    <div class="px-4 py-5 sm:p-6 text-center">
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-md bg-blue-100 text-blue-600 mb-3">
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900">My Tickets</h3>
                        <p class="mt-1 text-sm text-gray-500">View tickets assigned to me</p>
                    </div>
                </a>
                
                <a href="/ticket-app/twig-app/public/reports" class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 hover:border-purple-500 transition duration-150 ease-in-out">
                    <div class="px-4 py-5 sm:p-6 text-center">
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-md bg-purple-100 text-purple-600 mb-3">
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900">Reports</h3>
                        <p class="mt-1 text-sm text-gray-500">View and generate reports</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
